%header
  .header
    .header__top
      = link_to "Bon repas", "/"
    .header__bottom
      .header__bottom__menu
        %p MENU
      .header__bottom__sign
        - if user_signed_in?
          .header__bottom__sign__banner
            = link_to "/" do
              %span いいね！一覧
            = link_to new_food_path do
              %span 投稿する
            = link_to "mypage/#{current_user.id}" do
              %span マイページ
        - else
          .header__bottom__sign_up
            = link_to "会員登録", new_user_registration_path
          .header__bottom__sign_in
            = link_to "ログイン", new_user_session_path
