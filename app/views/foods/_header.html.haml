%header
  .header
    .header__top
      %p#title Bon repas
      -# = link_to "Bon repas", root_path
    .header__bottom
      .header__bottom__sign
        - if user_signed_in?
          %ul
            %li
              = link_to new_food_path do
                %p Recipe
                %span 投稿する
            %li
              = link_to "/mypage/#{current_user.id}" do
                %p Mypage
                %span マイページ
        - else
          %ul
            %li
              = link_to new_user_registration_path do
                %p Sign Up
                %span 会員登録
            %li
              = link_to new_user_session_path do
                %p Sign in
                %span ログイン