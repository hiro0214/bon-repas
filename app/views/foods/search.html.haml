.main
  = render "search"

  .main__contents
    .main__contents__top
      - if @input == "" || @input == nil
        %p 全てのレシピ一覧
      - else
        %p
          = "#{@input}の検索結果"
    .main__contents__bottom
      - @foods.each do |food|
        .main__food.search__food
          %p
            = food.text
          = link_to "/foods/#{food.id}" ,class: "food__list" do
            = image_tag food.image.url, class: "main__food__img"
            .main__food__name
              = food.food_name
            .main__food__info
              %p カテゴリー :
              %span
                = "#{food.category_id}"
              %span.middle__good
                = "いいね数🧡#{food.goods_count}"