.main.clearfix
  = render "search"

  .main__contents
    .main__contents__top
      %p 肉の新着レシピ一覧
      = form_with url: more_foods_path, method: :get, local: true do |f|
        = f.hidden_field :category, value: "肉"
        = f.submit "もっと見る", class: "main__more"
    .main__contents__bottom
      - @meat_foods.each do |food|
        .main__food
          %p.main__food__text
            = food.text
          = link_to "foods/#{food.id}" ,class: "food__list" do
            = image_tag food.image.url, class: "main__food__img"
            .main__food__name
