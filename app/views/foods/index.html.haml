.mid#index
  .middle.food_1
    - @foods_1.each do |food|
      .middle__list
        = link_to "foods/#{food.id}" do
          = image_tag food.image.url, class: "middle__image"
        %p
          = link_to "#{food.food_name}", "foods/#{food.id}"
        .middle__list__bottom
          %p カテゴリー :
          %span
            = "#{food.category_id}"
          %br
          %span.good_count
            = "いいね数🧡#{food.goods_count}"

